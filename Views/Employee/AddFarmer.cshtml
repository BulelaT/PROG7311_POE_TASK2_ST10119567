@model PROG7311_POE_TASK2_ST10119567.Models.FarmerModel 
@{
    ViewBag.Title = "AddFarmer";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddFarmer</title>
    <h2 style="font-family: Papyrus; ">Add New Farmer</h2>
</head>

<body>
    <div id="Addition">
        @using (Html.BeginForm("AddFarmer", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <p />

            <div class="form-group">
                @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Surname, new { @class = "form-control" })
                </div>
            </div>
            <p />

            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Username, new { @class = "form-control" })
                </div>
            </div>
            <p />

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <p />

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <p />

            <div class="form-group">
                @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    <div class="md-form md-outline input-with-post-icon datepicker">
                        <input placeholder="Select date" type="date" id="StartDate" class="form-control">
                        <input type="hidden" id="StartDateValue" name="StartDateValue" value="50000">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-primary w-100" onclick="SettingDate()" value="AddFarmer" type="submit">Add Farmer</button>
                </div>
            </div>
        }
    </div>
</body>
</html>

<script>
    function SettingDate() {
        document.getElementById("StartDateValue").value = document.getElementById("StartDate").value;
    }
</script>
